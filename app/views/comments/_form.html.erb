<strong>New comment</strong>
<%= form_for [@ticket, @comment] do |f| %>
    <% @comment.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
    <% end %>
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.label :state_id %><br>
      <%= f.select :state_id, State.all.map { |s| [s.name, s.id] }, selected: @ticket.state_id %>
    </p>
    <%= f.submit %>
<% end %>